.side_bar
  .side_bar__user-name
    .side_bar__user-name__top-item
      .side_bar__user-name__top-item__name
        = current_user.name
      .side_bar__user-name__top-item__icon
        = link_to new_group_path() do
          = icon("far", "edit", class: "icon")
        = link_to edit_user_path(current_user) do
          = icon("fas", "cog", class: "icon")

  .side_bar__group-list
    - current_user.groups.each do |group|
      .side_bar__group-list__group-names
        = link_to group_messages_path(group) do
          .side_bar__group-list__group-names__name
            = group.name
          .side_bar__group-list__group-names__text
            = group.show_last_message

